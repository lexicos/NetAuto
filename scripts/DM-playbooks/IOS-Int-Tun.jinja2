{%- macro MTun(Customer,ServiceID,OSPFa,VRF,from,to,loop) -%}
interface Tunnel {{ServiceID}}{{loop}}
 description {{Customer}} {{ServiceID}} Tunnel to {{to}}
 ip vrf forwarding {{Customer}}-{{ServiceID}}
 ip unnumbered Loopback {{ServiceID}}
 ip ospf network point-to-point
 ip ospf {{ServiceID}} area {{OSPFa}}
 tunnel source Loopback0
 tunnel destination 10.10.100.{{to}}
 {% endmacro %} 