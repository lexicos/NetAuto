router bgp 64000

{% for n in neighbors %}
{%   if n.state == "absent" %}
no neighbor {{n.address}}

{%   else %}
neighbor {{n.address}} remote-as {{n.asn}}
neighbor {{n.address}} description {{n.description}}
{%     if n.policy is defined %}
neighbor {{n.address}} route-map {{n.policy}} in
{%     endif %}

{%     if n.state == "down" %}
neighbor {{n.address}} shutdown
{%     endif %}

{%   endif %}

{% endfor %}